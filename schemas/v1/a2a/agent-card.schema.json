{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wrkr.dev/schemas/v1/a2a/agent-card.schema.json",
  "title": "Wrkr A2A Agent Card",
  "type": "object",
  "required": ["name", "capabilities", "auth_schemes", "protocols"],
  "properties": {
    "name": {"type": "string", "minLength": 1},
    "capabilities": {
      "type": "array",
      "items": {"type": "string", "minLength": 1},
      "minItems": 1,
      "uniqueItems": true
    },
    "auth_schemes": {
      "type": "array",
      "items": {"type": "string", "minLength": 1},
      "minItems": 1,
      "uniqueItems": true
    },
    "protocols": {
      "type": "array",
      "items": {"type": "string", "minLength": 1},
      "minItems": 1,
      "uniqueItems": true
    },
    "interaction_patterns": {
      "type": "array",
      "items": {"type": "string", "minLength": 1},
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}
